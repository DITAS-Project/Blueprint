{  
   "openapi":"3.0.0",
   "info":{  
      "title":"VDC Blueprint Repository Engine",
      "version":"0.3.1"
   },
   "servers":[  
      {  
         "description":"VDC Blueprint Repository server in CS",
         "url":"http://localhost:8080"
      }
   ],
   "paths":{  
      "/ditas/blueprints":{  
         "get":{  
            "parameters":[  
               {  
                  "name":"section",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"array",
                     "items":{  
                        "type":"string"
                     }
                  },
                  "style":"form",
                  "explode":true
               },
               {  
                  "name":"topic",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"array",
                     "items":{  
                        "type":"string"
                     }
                  },
                  "style":"form",
                  "explode":true
               },
               {  
                  "name":"scalability",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"boolean"
                  }
               },
               {  
                  "name":"filter",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"object",
                     "description":"any mongodb's filter (json document)"
                  }
               }
            ],
            "responses":{  
               "200":{  
                  "description":"successful operation",
                  "content":{  
                     "application/json":{  
                        "schema":{  
                           "type":"object",
                           "properties":{  
                              "_embedded":{  
                                 "type":"array"
                              },
                              "_returned":{  
                                 "type":"integer"
                              }
                           }
                        }
                     }
                  }
               }
            }
         },
         "post":{  
            "requestBody":{  
               "content":{  
                  "application/json":{  
                     "schema":{  
                        "description":"Abstract VDC Blueprint(s) to be stored in the VDC Blueprint Repository",
                        "anyOf":[  
                           {  
                              "type":"object"
                           },
                           {  
                              "type":"array"
                           }
                        ]
                     }
                  }
               }
            },
            "responses":{  
               "201":{  
                  "description":"successful operation",
                  "content":{  
                     "application/json":{  
                        "schema":{  
                           "type":"object",
                           "properties":{  
                              "blueprint_id":{  
                                 "type":"array"
                              }
                           },
                           "required":["blueprint_id"]
                        }
                     }
                  }
               }
            }
         }
      },
      "/ditas/blueprints/{blueprint_id}":{  
         "get":{  
            "parameters":[  
               {  
                  "name":"blueprint_id",
                  "in":"path",
                  "required":true,
                  "schema":{  
                     "type":"string"
                  }
               },
               {  
                  "name":"section",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"array",
                     "items":{  
                        "type":"string"
                     }
                  },
                  "style":"form",
                  "explode":true
               },
               {  
                  "name":"topic",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"array",
                     "items":{  
                        "type":"string"
                     }
                  },
                  "style":"form",
                  "explode":true
               },
               {  
                  "name":"scalability",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"boolean"
                  }
               },
               {  
                  "name":"filter",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"object",
                     "description":"any mongodb's filter (json document)"
                  }
               }
            ],
            "responses":{  
               "200":{  
                  "description":"successful operation",
                  "content":{  
                     "application/json":{  
                        "schema":{  
                           "type":"object"
                        }
                     }
                  }
               }
            }
         },
         "delete":{  
            "parameters":[  
               {  
                  "name":"blueprint_id",
                  "in":"path",
                  "required":true,
                  "schema":{  
                     "type":"string"
                  }
               }
            ],
            "responses":{  
               "204":{  
                  "description":"successful operation"
               }
            }
         },
         "patch":{  
            "parameters":[  
               {  
                  "name":"blueprint_id",
                  "in":"path",
                  "required":true,
                  "schema":{  
                     "type":"string"
                  }
               }
            ],
            "requestBody":{  
               "content":{  
                  "application/json":{  
                     "schema":{  
                        "type":"object",
                        "description":"all the fields to be updated",
                        "example":{  
                           "INTERNAL_STRUCTURE.Overview":{  
                              "name":"VDC_1",
                              "description":"This VDC provides information about the patients of the general hospital of Athens",
                              "topic":"Health",
                              "keywords":[  
                                 "Athens",
                                 "hospital",
                                 "patients"
                              ]
                           },
                           "ABSTRACT_PROPERTIES.Quality_Properties.scalability":false
                        }
                     }
                  }
               }
            },
            "responses":{  
               "200":{  
                  "description":"successful operation"
               }
            }
         }
      }
   }
}